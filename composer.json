{
    "name": "seu-usuario/seu-projeto",
    "description": "Descrição do seu projeto",
    "type": "project",
    "require": {
        "php": "^8.3.8"  
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"  
    },
    "autoload": {
        "psr-4": {
            "App\\": "class/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
